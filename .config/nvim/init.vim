syntax on

set nocompatible
set showmatch
set ignorecase
set mouse=v
set mouse=a
set hlsearch
set incsearch
set tabstop=4
set softtabstop=4
set expandtab
set shiftwidth=4
set autoindent
set number
set wildmode=longest,list
set cc=0
filetype plugin indent on
set clipboard=unnamedplus
filetype plugin on
set ttyfast
set noswapfile
set backupdir=~/.cache/vim
